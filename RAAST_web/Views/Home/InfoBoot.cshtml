@{
    ViewBag.Title = "Informatie Boot";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style>
        .centeredWhite {
            text-align: center;
            color: #ffffff;
        }

        .ct {
            border-bottom: 1px solid white;
        }

        .headerDiv {
            width: 150px;
            margin: 0 auto;
        }

        .map-responsive {
            overflow: hidden;
            padding-bottom: 56.25%;
            position: relative;
            height: 0;
        }

            .map-responsive iframe {
                left: 0;
                top: 0;
                height: 100%;
                width: 100%;
                position: absolute;
            }

        .bigBackground {
            background: #f8f5ee;
        }

        .moduleStyle {
            background: #ce0033;
            border-bottom: 5px solid black;
            border-radius: 25px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body class="bigBackground">
    <div class="container">
        <div>
            <h2>@ViewBag.Title</h2>
            <h3>@ViewBag.Message</h3>
            <div class="map-responsive">
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d19692.114835021257!2d4.4363613!3d51.90632625!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1snl!2snl!4v1633870932158!5m2!1snl!2snl"
                        width="1200" height="450" style="border:0; border-radius: 20px" allowfullscreen="yes" loading="lazy">
                </iframe>
            </div>
        </div>
    </div>
    <div class="container">

        <h2>Informatie over de modules</h2>

        <div class="col-lg-5 moduleStyle">
            <div class="headerDiv">
                <h3 class="centeredWhite ct">Snelheid</h3>
            </div>

            <p class="centeredWhite">Dit is de snelheid van het bootje</p>
        </div>

        <div class="col-lg-offset-2 col-lg-5 moduleStyle">
            <div class="headerDiv">
                <h3 class="centeredWhite ct">Windkracht</h3>
            </div>

            <p class="centeredWhite">Dit is de huidige windkracht</p>
        </div>

        <div class="col-lg-5 moduleStyle">
            <div class="headerDiv">
                <h3 class="centeredWhite ct">Temperatuur</h3>
            </div>

            <p class="centeredWhite">Dit is de huidige temperatuur</p>
        </div>
        <div class="col-lg-offset-2 col-lg-5 moduleStyle">
            <div class="headerDiv">
                <h3 class="centeredWhite ct">Richting</h3>
            </div>

            <p class="centeredWhite">Dit is de huidige richting van het bootje</p>
        </div>
    </div>

</body>
</html>
