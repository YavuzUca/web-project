<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/css/homepage.css" rel="stylesheet" />
    <title>@ViewBag.Title - Raast Project</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #ce0033 ; border-color : red">
        <a class="navbar-brand" href="">
            <img src="~/images/hogeschool-rotterdam-1-logo-png-transparent.png" width="30" height="30" class="d-inline-block align-middle mr-2" alt="">
        </a>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle btn btn-danger" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!-- First param is text on navbar, second param is the filename, third param is the name of the controller. -->
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Info", "InfoBoot", "Home")</li>
                    <li>@Html.ActionLink("Credits", "Credits", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
    <div class="container body-content">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - RAAST Hogeschool Rotterdam</p>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
